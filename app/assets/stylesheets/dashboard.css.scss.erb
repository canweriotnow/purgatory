.dash {
  width: 100%;
  height: 600px;
  display: block;
  background-image: url(<%= asset_path 'burning.jpg' %>);
  //background-attachment: fixed;
  background-repeat: no-repeat;
  background-position: top right;
}

.dash h1 {
  font-family: 'IM Fell English', serif;
  font-size: 36pt;
  padding-top: 5px;
}

.dash h2 {
  font-family: 'IM Fell English', serif;
  font-size: 24pt;
  padding-top: 5px;
}

.dash-body {
  width: 60%;
  background-color: transparent;
}
.dash-body p {
  font-family: 'IM Fell English', serif;
}

#latest {
  width: 80%;
}

#latest .report {
  padding: 5px;
  h3 {
    font-family: 'IM Fell English', serif;
  }
  h4 {
    font-family: 'IM Fell English', serif;
  }
}